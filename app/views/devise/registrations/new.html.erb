<!DOCTYPE html>
<html>
  <head>
    <title>Sign up</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <h2>Sign up</h2>
  </head>
  
  <body>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <%= render "devise/shared/error_messages", resource: resource %>
      <% end %>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, class: "required", autofocus: true, autocomplete: "username" %>
      </div>

      <div class="field">
        <%= f.label :phone %><br />
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone" %>
      </div>

      <div class="field">
        <%= f.label :address %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>

      <div class="field">
        <%= f.label :pincode %><br />
        <%= f.text_field :pincode, autofocus: true, autocomplete: "pincode" %>
      </div>


      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "required", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "required", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "required", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", id: "sign-up-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </body>
 

</html>




<h1>Post Message App Users</h1>

<table>
  <thead>
		<tr>
			<th>
				<th>Username</th>
				<th colspan="3">Actions</th>
			</th>
		</tr>
	</thead>  

	<tbody>
		<% @user&.each do |u| %>
			<tr>
				<td><%= u.username %></td>
				<td><%= link_to "View Profile", u %></td>
				<td><%= link_to "Edit Profile", edit_user_path(u) %></td>
				<td><%= link_to "Delete Profile", users_path(u), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'Back to Home', root_path %>
